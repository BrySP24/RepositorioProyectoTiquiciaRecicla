<!DOCTYPE html>
<html lang="es.es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Muetra el nombre del app web y la vista en la pestaña del navegador-->
    <title>@ViewData["Title"] - Tiquicia Recicla </title>

    <!--Muetrasolo el nombre del app web en la pestaña del navegador
    <meta name="author" content="" />
    <title>Tiquicia Recicla </title>-->
    <!-- Muetra el inono en la barra superior del navegador-->
    <link rel="icon" type="image/x-icon" href="/Iconos/TiquiciaFondoOscuro.png" />


    <!-- Favicon para inono en la barra superior de navegador-->
    <link rel="icon" type="image/x-icon" href="/Iconos/TiquiciaFondoOscuro.png" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoTiquiciaRecicla.bootstrap.css" asp-append-version="true" />

    <!-- Permite la utilizacionn de los mensajes de la pagina de www.toastrjs.com -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Permite la utilizacion de iconos de la pagina de bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <!-- Vista parcial llamada MenuSuperior-->
        <partial name="_MenuSuperior.cshtml"> </partial>
    </header>

    @{
        // Obtener el valor de UsuarioRol de ViewData
        int usuarioRol = ViewData["UsuarioRol"] != null ? (int)ViewData["UsuarioRol"] : 0;
        // Obtener el valor de UsuarioSesion de ViewBag
        int usuarioSesion = ViewBag.UsuarioSesion != null ? (int)ViewBag.UsuarioSesion : 0;
    }
    <!-- Sidebar-->
    
        <div class="d-flex " id="sidebar-wrapper">
        @if (ViewBag.ShowSidebar == null || ViewBag.ShowSidebar == true)
        {
            <div class="border-end bg-white " id="sidebar-wrapper">
                <div class=" list-group m-2">
                    <!-- Mostrar Inicio para todos -->
                    <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Index", "Home")"><i class="bi bi-house"></i> Inicio</a>
                    
                    @if (usuarioRol == 1)
                    {
                        <a style="text-align:left" class="btn btn-success  mb-2 " href="@Url.Action("Mantenimiento", "CAT_Provincia")"><i class="bi bi-signpost"></i> Provincias</a>
                        <a style="text-align:left" class="btn btn-success mb-2 " href="@Url.Action("Mantenimiento", "TBL_Usuario")"><i class="bi bi-person"></i> Administrar usuarios</a>
                        <a style="text-align:left " class="btn btn-success mb-2  " href="@Url.Action("Mantenimiento", "CAT_Empresa_Recolectora")"><i class="bi bi-truck"></i> Empresas recolectoras</a>
                        <a style="text-align:left" class="btn btn-success mb-2 " href="@Url.Action("Mantenimiento", "CAT_Centro_De_Acopio")"><i class="bi bi-building"></i> Centro de acopio</a>
                        <a style="text-align:left" class="btn btn-success mb-2  " href="@Url.Action("Mantenimiento", "TBL_Evento")"><i class="bi bi-calendar2-event"></i>  Eventos</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "TBL_Anuncio")"><i class="bi bi-megaphone"></i> Anuncios</a>
                        <a style="text-align:left" class="btn btn-success mb-2 " href="@Url.Action("Mantenimiento", "TBL_Zona_de_Recolecta")"><i class="bi bi-pin-map"></i> Zonas de recolecta</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "CAT_Tipo_De_Material")"><i class="bi bi-box-seam"></i> Tipos de materiales</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "TBL_Recibo_De_Reciclaje")"><i class="bi bi-ticket-detailed"></i> Recibos de reciclaje</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Dashboard", "BI_Datos_De_Reciclaje")"><i class="bi bi-ticket-detailed"></i> Estadísticas de reciclaje</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Dashboard", "BI_Datos_De_Uso_Aplicacion")"><i class="bi bi-ticket-detailed"></i> Estadísticas de uso de aplicación</a>
                    }else if(usuarioRol == 2){
                        <a style="text-align:left " class="btn btn-success mb-2  " href="@Url.Action("Mantenimiento", "CAT_Empresa_Recolectora")"><i class="bi bi-truck"></i> Empresas recolectoras</a>
                        <a style="text-align:left" class="btn btn-success mb-2 " href="@Url.Action("Mantenimiento", "CAT_Centro_De_Acopio")"><i class="bi bi-building"></i> Centro de acopio</a>
                        <a style="text-align:left" class="btn btn-success mb-2  " href="@Url.Action("Mantenimiento", "TBL_Evento")"><i class="bi bi-calendar2-event"></i>  Eventos</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "TBL_Anuncio")"><i class="bi bi-megaphone"></i> Anuncios</a>
                        <a style="text-align:left" class="btn btn-success mb-2 " href="@Url.Action("Mantenimiento", "TBL_Zona_de_Recolecta")"><i class="bi bi-pin-map"></i> Zonas de recolecta</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "CAT_Tipo_De_Material")"><i class="bi bi-box-seam"></i> Tipos de materiales</a>
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Dashboard", "BI_Datos_De_Reciclaje")"><i class="bi bi-ticket-detailed"></i> Estadísticas de reciclaje</a>
                    }else if(usuarioRol == 3){
                        <a style="text-align:left" class="btn btn-success mb-2" href="@Url.Action("Mantenimiento", "TBL_Recibo_De_Reciclaje")"><i class="bi bi-ticket-detailed"></i> Recibos de reciclaje</a>
                    }
            </div>
            </div>
            }
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @*<footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - ProyectoTiquiciaRecicla - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@

    <!-- Vista parcial llamada pie de pagina-->
    <partial name="_PiePagina.cshtml"> </partial>

    <!-- Bootstrap core JS-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Core theme JS-->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
