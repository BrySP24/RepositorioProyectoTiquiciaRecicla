@model ProyectoTiquiciaRecicla.Models.TBL_Evento

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int usuarioRol = (int)ViewData["UsuarioRol"];
}

<div class="mx-0">
    <br />
    <h2><a asp-action="Mantenimiento" class="btn-outline-primary"><i class="bi bi-chevron-left mx-2 "></i></a><i class="bi bi-calendar2-event"></i> Detalles de evento</h2>
    <hr />
</div>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DTI_Inicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DTI_Inicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DTI_Fin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DTI_Fin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Premio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Premio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAT_Empresas_Recolectoras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAT_Empresas_Recolectoras.CH_Nombre)
        </dd>
    </dl>
</div>
@if (usuarioRol == 1)
{
    <div>
        <a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-primary "><i class="bi bi-pencil"></i> Editar</a>
    </div>
}