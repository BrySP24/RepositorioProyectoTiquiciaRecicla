@model IEnumerable<ProyectoTiquiciaRecicla.Models.TBL_Evento>

@{
    ViewData["Title"] = "Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int usuarioRol = (int)ViewData["UsuarioRol"];
}
<div class="mx-1">
    <br />
    <h2><i class="bi bi-calendar2-event"></i> Mantenimiento de eventos</h2>
    <hr />
    <p>
        @if (usuarioRol == 1)
        {
            <a asp-action="Crear" class="btn btn-success "> <i class="bi bi-plus-circle"></i> Agregar un evento</a>
        }
    </p>
</div>
<table border="2" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CH_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DTI_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DTI_Fin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Premio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAT_Empresas_Recolectoras)
            </th>
            <th>   
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DTI_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DTI_Fin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Premio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAT_Empresas_Recolectoras.CH_Correo_Electronico)
            </td>
                <td class="align-middle">
                    @if(usuarioRol == 1){
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                        <a asp-action="Detalles" asp-route-id="@item.Id " class="btn btn-success  btn-sm"><i class="bi bi-eye"></i> Detalles</a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id " class="btn btn-danger  btn-sm"> <i class="bi bi-trash-fill"></i> Eliminar</a>
                    }
                    else
                    {
                        <a asp-action="Detalles" asp-route-id="@item.Id " class="btn btn-success  btn-sm"><i class="bi bi-eye"></i> Detalles</a>
                    }
             </td>
        </tr>
}
    </tbody>
</table>
