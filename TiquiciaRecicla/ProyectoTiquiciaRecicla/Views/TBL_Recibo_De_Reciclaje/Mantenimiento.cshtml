@model IEnumerable<ProyectoTiquiciaRecicla.Models.TBL_Recibo_De_Reciclaje>

@{
    ViewData["Title"] = " Recibos de reciclaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mx-1">
    <br />
    <h2><i class="bi bi-ticket-detailed"></i> Mantenimiento de recibos de reciclaje</h2>
    <hr />
    <p>
        <a asp-action="Crear" class="btn btn-success "> <i class="bi bi-plus-circle"></i> Agregar un recibo de reciclaje</a>
    </p>
</div>
<table border="2" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DTI_Fecha_Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DEC_Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAT_Tipos_De_Materiales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAT_Centros_De_Acopio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TBL_Usuarios)
            </th>

            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DTI_Fecha_Hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DEC_Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CAT_Tipos_De_Materiales.CH_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CAT_Centros_De_Acopio.CH_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TBL_Usuarios.CH_Nombre)
                </td>
                <td class="align-middle">
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"><i class="bi bi-pencil"></i> Editar</a> |

                    <a asp-action="Detalles" asp-route-id="@item.Id " class="btn btn-success  btn-sm"><i class="bi bi-eye"></i> Detalles</a> |

                    <a asp-action="Eliminar" asp-route-id="@item.Id " class="btn btn-danger  btn-sm"> <i class="bi bi-trash-fill"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
