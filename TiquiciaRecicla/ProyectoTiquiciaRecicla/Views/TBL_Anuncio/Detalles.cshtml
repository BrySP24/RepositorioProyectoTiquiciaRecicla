@model ProyectoTiquiciaRecicla.Models.TBL_Anuncio

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int usuarioRol = (int)ViewData["UsuarioRol"];
}
<div class="mx-0">
    <br />
    <h2><a asp-action="Mantenimiento" class="btn-outline-primary"><i class="bi bi-chevron-left mx-2 "></i></a><i class="bi bi-megaphone"></i> Detalles de anuncio</h2>
    <hr />
</div>
<img class="rounded" src="@Model.IMG_Banner" alt=" @Model.CH_Titulo" style="max-width:50%;display:block;margin-left:auto;margin-right:auto" />
<br/>
<div>   
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAT_Centros_De_Acopio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAT_Centros_De_Acopio.CH_Nombre)
        </dd>
    </dl>
</div>
@if (usuarioRol == 1)
{
    <div>
        <a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-primary "><i class="bi bi-pencil"></i> Editar</a>
    </div>
}