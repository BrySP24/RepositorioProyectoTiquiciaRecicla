@model ProyectoTiquiciaRecicla.Models.TBL_Anuncio

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-0">
    <br />
    <h3><a asp-action="Mantenimiento" class="btn-outline-primary"><i class="bi bi-chevron-left mx-2 "></i></a><i class="bi bi-megaphone"></i> Eliminar un anuncio</h3>
    <hr />
</div>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IMG_Banner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IMG_Banner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CH_Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CH_Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAT_Centros_De_Acopio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAT_Centros_De_Acopio.CH_Nombre)
        </dd>
    </dl>
    <br />
    <h6>¿Estás seguro de eliminar el registro?</h6>
    <br />
    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
