@model ProyectoTiquiciaRecicla.Models.TBL_Anuncio

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mx-0">
    <br />
    <h2><a asp-action="Mantenimiento" class="btn-outline-primary"><i class="bi bi-chevron-left mx-2 "></i></a><i class="bi bi-megaphone"></i> Editar anuncio</h2>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CH_Titulo" class="control-label"></label>
                <input asp-for="CH_Titulo" class="form-control" />
                <span asp-validation-for="CH_Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMG_Banner" class="control-label"></label>
                <input asp-for="IMG_Banner" class="form-control" />
                <span asp-validation-for="IMG_Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CH_Descripcion" class="control-label"></label>
                <input asp-for="CH_Descripcion" class="form-control" />
                <span asp-validation-for="CH_Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CAT_Centro_De_AcopioId" class="control-label"></label>
                <select asp-for="CAT_Centro_De_AcopioId" class="form-control" asp-items="ViewBag.CAT_Centro_De_AcopioId"></select>
                <span asp-validation-for="CAT_Centro_De_AcopioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



