@model IEnumerable<ProyectoTiquiciaRecicla.Models.CAT_Tipo_De_Material>

@{
    ViewData["Title"] = "Mantenimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-1">
    <br />
    <h2><i class="bi bi-box-seam"></i> Mantenimiento tipos de materiales</h2>
    <hr />
    <p>
        <a asp-action="Crear" class="btn btn-success "> <i class="bi bi-plus-circle"></i> Agregar un tipo de material</a>
    </p>
</div>
<table border="2" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CH_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Tratamiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Tratamiento)
            </td>
                <td class="align-middle">
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"><i class="bi bi-pencil"></i> Editar</a> |

                    <a asp-action="Detalles" asp-route-id="@item.Id " class="btn btn-success  btn-sm"><i class="bi bi-eye"></i> Detalles</a> |

                    <a asp-action="Eliminar" asp-route-id="@item.Id " class="btn btn-danger  btn-sm"> <i class="bi bi-trash-fill"></i> Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
