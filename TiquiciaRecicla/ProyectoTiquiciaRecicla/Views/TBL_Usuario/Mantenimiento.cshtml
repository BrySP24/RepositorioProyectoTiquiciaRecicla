@model IEnumerable<ProyectoTiquiciaRecicla.Models.TBL_Usuario>

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mx-1">
    <br />
    <h2><i class="bi bi-person"></i> Mantenimiento de usuario</h2>
    <hr />
    <p>
        <a asp-action="Crear" class="btn btn-success "> <i class="bi bi-plus-circle"></i> Agregar un usuario</a>
    </p>
</div>
<table border="2" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CH_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Apellido_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_apellido_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CH_Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAT_Provincias)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.CAT_RolId)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                @Html.DisplayFor(modelItem => item.CH_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Apellido_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_apellido_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Clave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CH_Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAT_Provincias.CH_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAT_Roles.CH_Nombre)
            </td>
            <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"><i class="bi bi-pencil"></i> Editar</a> |

                    <a asp-action="Detalles" asp-route-id="@item.Id " class="btn btn-success  btn-sm"><i class="bi bi-eye"></i> Detalles</a> |

                    <a asp-action="Eliminar" asp-route-id="@item.Id " class="btn btn-danger  btn-sm"> <i class="bi bi-trash-fill"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
